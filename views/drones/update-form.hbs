<h2>Update the drone</h2>
<form action="/drones/{{drone._id}}/edit" method="post">
  <div>
    <label for="name">Name: </label>
    <input type="text" name="name" value="{{drone.name}}" />
  </div>
  <div>
    <label for="propellers">Number of propellers: </label>
    <input type="number" name="propellers" value="{{drone.propellers}}" />
  </div>
  <div>
    <label for="maxSpeed">maxSpeed: </label>
    <input type="number" name="maxSpeed" value="{{drone.maxSpeed}}" />
  </div>
  <button type="submit">Edit the drone</button>
</form>